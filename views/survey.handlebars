
<div class="content">
    <h2 class="content-head is-center">Survey Questions</h2>
    <div class="pure-g">
        <div class="pure-u-1 pure-u-md-2-5">
            <form class="pure-form pure-form-stacked">
                <fieldset>

                    <label for="name">Your Name</label>
                    <input id="name" type="text" placeholder="Your Name" required>
                    <label for="photo">Your Photo</label>
                    <input id="photo" type="text" placeholder="Link to your photo" required>
                    
                    {{#each questions }}
                    <h3><strong>{{name}}</strong></h3>
                    <h4>{{question}}</h4>
                    	<select id=q{{@index}} required>
                    		<option value=""></option>
                    	    <option value="1">1 (Strongly Disagree)</option>
                    	    <option value="2">2</option>
                    	    <option value="3">3</option>
                    	    <option value="4">4</option>
                    	    <option value="5">5 (Strongly Agree)</option>
                    	</select>
                    {{/each}}

                    <button id="submit" type="submit" class="pure-button"><i class="fa fa-check-circle" aria-hidden="true"></i>Submit</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>

<div class="modal-overlay closed" id="modal-overlay"></div>

<div id="modal" class="modal is-center closed" role="dialog">
    <h2><strong>Best Match</strong></h2>
    <h2 id="matchName"></h2>
    <div class="pure-g">
	    <div class="pure-u-1-3"></div>
	    <div class="pure-u-1-3">	   
	    	<img id="matchImg" class='pure-img-responsive' src="" alt="">
    	</div>
	    <div class="pure-u-1-3"></div>
	</div>
    <button id="close-button" type="button" class="pure-button">Close</button>
</div>
<script src="survey.js" type="text/javascript"></script>